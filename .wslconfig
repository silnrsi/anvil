# Global WSL settings, see details on https://learn.microsoft.com/en-us/windows/wsl/wsl-config
# copy it to %USERPROFILE%\.wslconfig

# Settings apply across all Linux distros running on WSL 2
[wsl2]

# Limits VM memory, can be set as whole numbers using GB or MB
memory=8GB

# Set the amount of virtual processors
processors=8

# Sets amount of swap storage space, recommended default is about 25% of available RAM
swap=2GB

# Default connection to bind WSL 2 localhost to Windows localhost
localhostforwarding=false

# Disables nested virtualization
nestedVirtualization=false

# output console showing contents of dmesg when opening a WSL 2 distro for debugging (Win11 only)
debugConsole=false

# Turn off GUI support to reduce memory usage
guiApplications=false


[experimental]
# more agressively reclaim memory
autoMemoryReclaim=dropcache



